---
const milestones = [
  { 
    season: "S4", rank: "Bronce 2", lp: "LP 0", 
    accent: "text-[#CD7F32]", border: "border-l-[#CD7F32]", 
    glow: "shadow-[0_0_30px_rgba(205,127,50,0.15)]" 
  },
  { 
    season: "S5", rank: "Plata 4", lp: "Peak", 
    accent: "text-[#A5A9B4]", border: "border-l-[#A5A9B4]", 
    glow: "shadow-[0_0_30px_rgba(165,169,180,0.15)]" 
  },
  { 
    season: "S6", rank: "Platino 5", lp: "Peak", 
    accent: "text-[#2cfab5]", // Verde Turquesa Platino
    border: "border-l-[#2cfab5]",
    glow: "shadow-[0_0_40px_rgba(44,250,181,0.2)]" 
  },
  { 
    season: "S8", rank: "Diamante 5", lp: "Peak", 
    accent: "text-[#3c78fd]", // Azul Diamante
    border: "border-l-[#3c78fd]",
    glow: "shadow-[0_0_40px_rgba(60,120,253,0.2)]" 
  },
  { 
    season: "S2025", rank: "Master Tier", lp: "LP 20", 
    accent: "text-[#bc44ff]", // Morado Master
    border: "border-l-[#bc44ff]",
    glow: "shadow-[0_0_50px_rgba(188,68,255,0.3)]", 
    current: true 
  },
];
---

<section id="trayectoria" class="py-32 relative overflow-hidden bg-[#2D2826]">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 opacity-[0.05] bg-[linear-gradient(to_right,#A1B0B7_1px,transparent_1px),linear-gradient(to_bottom,#A1B0B7_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,#C0734F10,transparent_70%)]"></div>
  </div>

  <div class="absolute inset-0 pointer-events-none z-10 overflow-hidden">
    {[...Array(20)].map((_, i) => (
      <div 
        class="ash-particle" 
        style={`left: ${Math.random() * 100}%; top: ${Math.random() * 100}%; animation-delay: ${Math.random() * 15}s; width: ${Math.random() * 6 + 2}px; height: ${Math.random() * 6 + 2}px;`}
      ></div>
    ))}
  </div>

  <div class="max-w-[1600px] mx-auto px-6 relative z-20">
    <div class="mb-24 text-center">
      <h2 class="text-4xl md:text-6xl font-black text-white mb-6 tracking-tighter uppercase">
        MI <span class="text-[#C0734F]">ASCENSO</span>
      </h2>
      <p class="text-[#A1B0B7] max-w-2xl mx-auto text-sm font-bold uppercase tracking-[0.4em] opacity-80">
        He pasado por todos los elos: entiendo tu estancamiento porque yo estuve ahí.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
      {milestones.map((m) => (
        <div class="group relative transition-all duration-500 hover:-translate-y-4">
          <div class={`h-full bg-[#1e1a18]/95 backdrop-blur-md border-l-[6px] ${m.border} p-8 ${m.glow} transition-all duration-500`}>
            <div class="flex justify-between items-center mb-12">
              <span class="font-mono text-[10px] text-[#545C61] font-bold">S-{m.season}</span>
              {m.current && (
                <div class="flex items-center gap-2">
                    <span class="text-[9px] font-bold text-[#bc44ff] tracking-widest">ACTUAL</span>
                    <span class="h-1.5 w-1.5 rounded-full bg-[#bc44ff] animate-pulse"></span>
                </div>
              )}
            </div>

            <div class="mb-6">
              <h3 class={`text-2xl xl:text-3xl font-black uppercase tracking-tighter ${m.accent} transition-transform duration-500 origin-left group-hover:scale-110`}>
                {m.rank}
              </h3>
              <p class="text-[10px] text-white/30 font-mono tracking-[0.3em] uppercase mt-2">{m.lp}</p>
            </div>
            
            <div class="w-full h-[1px] bg-white/5 relative overflow-hidden mt-4">
                <div class={`absolute inset-0 bg-gradient-to-r from-transparent via-current to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000 ${m.accent}`}></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-40 relative max-w-4xl mx-auto">
      <div class="relative bg-[#1e1a18]/80 border border-white/5 backdrop-blur-2xl p-12 md:p-16 text-center">
        <div class="absolute top-0 left-0 w-8 h-8 border-t border-l border-[#C0734F]/50"></div>
        <div class="absolute bottom-0 right-0 w-8 h-8 border-b border-r border-[#C0734F]/50"></div>
        
        <p class="text-2xl md:text-4xl text-white font-black leading-tight tracking-tighter uppercase italic">
          "TU NIVEL MECÁNICO TIENE UN TECHO, PERO TU <span class="text-[#C0734F]">MACROGAME</span> NO. <br class="hidden md:block"/> 
          APRENDE A LEER LA GRIETA COMO UN MASTER Y EL ASCENSO SERÁ LA <span class="underline decoration-[#C0734F] decoration-4 underline-offset-8">CONSECUENCIA NATURAL</span>."
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de Cenizas mejorada para llenar el espacio */
  .ash-particle {
    position: absolute;
    background: #C0734F;
    border-radius: 1px; /* Cuadradas tipo glitch */
    filter: blur(1px);
    opacity: 0;
    animation: ash-float 12s infinite linear;
  }

  @keyframes ash-float {
    0% { transform: translateY(20vh) translateX(0) rotate(0deg); opacity: 0; }
    20% { opacity: 0.4; }
    80% { opacity: 0.4; }
    100% { transform: translateY(-100vh) translateX(100px) rotate(180deg); opacity: 0; }
  }

  /* Ajuste para pantallas pequeñas */
  @media (max-width: 1024px) {
    .grid {
        gap: 1.5rem;
    }
  }
</style>